{
    "description": "Fast CLI Meme Generator",
    "arguments": [
        {
            "long": "template",
            "var": "STRING",
            "help": "Name of the template of the meme that should be generated",
            "default": "monke",
            "type": "str"
        },

        {
            "long": "font-size",
            "var": "NUMBER",
            "help": "Font size of the text that is generated onto the picture",
            "default": 70,
            "type": "int"
        },

        {
            "long": "font",
            "var": "STRING",
            "help": "Path to font that should be used",
            "default": "fonts/arial.ttf",
            "type": "str"
        },

        {
            "long": "clipboard",
            "var": "BOOLEAN",
            "help": "Copies the resulting image into Clipboard (Windows only)",
            "default": false,
            "type": "bool"
        },

        {
            "long": "output",
            "var": "STRING",
            "help": "Defines the output path. If set to \"-\" the file gets an automated assigned name",
            "default": "-",
            "type": "str"
        },

        {
            "long": "text",
            "var": "STRING",
            "help": "Text that should be put onto the template",
            "type": "str"
        }
    ]
}